enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED

  @@map("invitation_statuses")
  @@schema("public")
}

model Invitation {
  id        String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String
  token     String           @unique
  status    InvitationStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("invitations")
  @@schema("public")
}
